// Base styles

body
  font-family base_font
  font-weight normal
  color sol_primary
  background-color white
  font-size base_font_size
  text-align left

p
  margin-bottom 15px

p.lead
  font-size 115%
  font-weight normal

u
  text-decoration underline

strong
  font-weight 400

span.keyboard
  font-weight bold
  background #ccc
  border-radius 3px
  padding 4px 6px

.footnote
  font-size 80%

.math-font
  font-family math_font
  font-size 105%

// Headers

.title
  font-size 150%

h1, h2, h3, h4, h5, h6
  font-family base_font
  font-weight 400
  a
    color sol_primary
    &:hover
      color link_color
      text-decoration none
    &:visited,&:hover,&:active
      text-decoration none
  text-align left

h1
  font-size 150%

h2
  font-size 120%

h3
  font-size 110%

h4
  font-size 100%

.page-header
  line-height 1.25
  border-bottom 1px solid darken(sol_highlight, 5%)

// Lists

.pub-list
  margin-top 15px
  text-align left
  .pub-item
    margin-bottom 15px
    line-height 1.7
    .label
      margin-right 1.5ex

ul
  text-align left
  padding-left 1.5em

dl
  dt
    font-weight 400

.labeled-li
  >.item
    display inline
  >.li-label
    margin-left 0.80ex
    display inline
    color sol_secondary
    font-weight 100
ul.heavyweight>.labeled-li
  >.item
    font-weight normal
  >.li-label
    font-weight 300

.block-ul
  padding 10px 0
.block-li
  text-shadow 0 1px white
  margin 0 25px 25px 0
  display inline-block
  padding 10px 10px
  vertical-align baseline
  font-size 100%
  >.block-li-label
    padding 5px
    display inline
    color sol_secondary
    font-weight 300
  >.item
    padding 5px
    margin-left 0.5ex
    display inline
    font-weight normal
    color darken(sol_secondary, 8)
  &[href]:hover
    text-shadow none
    background-color link_color
    color sol_background
    >.block-li-label
      color lighten(link_color, 50)
    >.item
      color sol_background

// Code

pre, code, pre.prettyprint, code.prettyprint
  font-family mono_font
  font-size 85%
  background-color rgba(27, 31, 35, 0.05)

code
  padding 3px 9px


// Links

a
  color link_color
  &:hover
    color link_color
    text-decoration underline

a.prompt
  color inherit
  &:hover
    color link_color
    text-decoration none
  &:after
    content "Â»"
    color link_color
    padding 0 0 0 .5ex

// Dates

.date
  position relative
  color sol_secondary
  >.wrap
    position absolute
    bottom 3px
    right 10px
    font-size 70%
    font-weight 300

// Tables

// phone
unquote("@media (max-width: "+phone_max+") {")
.table
  font-size 85%
.date>.wrap
  right 0
unquote("}")

.table
  margin 0 auto
  width 100%
  text-align left
  margin-top 30px

.table>caption+thead>tr:first-child>th,
.table>colgroup+thead>tr:first-child>th,
.table>thead:first-child>tr:first-child>th,
.table>caption+thead>tr:first-child>td,
.table>colgroup+thead>tr:first-child>td,
.table>thead:first-child>tr:first-child>td
  border-top 1px solid #ddd

.table-responsive
  border none


// References

ol.references
  text-align left
  >li
    margin-bottom 20px
    margin-top 20px


// Figures

figcaption
  font-size 85%
  text-align left

// xs, sm
unquote("@media (max-width: "+sm_max+") {")
h1.page-header
  margin hOne_top_margin 0 10px 0
p
  margin-bottom 10px
unquote("}")

// xs
unquote("@media (max-width: "+xs_max+") {")
body
  font-size 0.75*base_font_size
unquote("}")

// phone
unquote("@media (max-width: "+phone_max+") {")
body
  font-size 0.75*base_font_size
  font-weight normal

strong
  font-weight bold

p.lead
  font-weight inherit
unquote("}")

