.navbar-inverse
  border none
  color sol_secondary
.navbar
  height navbar_height
  .navbar-brand
    font-family display_font
    font-size 120%
    letter-spacing 0.25ex
    color sol_background
  ul.navbar-nav
    >li>a
        padding-left 20px
        padding-right 20px
        color inherit
        &.active, &:hover, &:focus
          color lighten(sol_secondary, 50%)
        &.active, &:active
          background-color darken(navbar_background, 80%)

// xs
unquote("@media (max-width: 991px) {")

navlink_xs_left_right_padding = 15px
navlink_hover_highlight_width = 5px

.navbar-inverse
  ul.navbar-nav
    margin-top 1px
    margin-bottom 1px
    >li>a
      padding-left navlink_xs_left_right_padding
      &.active, &:hover, &:focus
        padding-left navlink_xs_left_right_padding - navlink_hover_highlight_width
        border-left navlink_hover_highlight_width solid cyan
unquote("}")

// sm, md, lg
unquote("@media (min-width: 991px) {")
.navbar-inverse
  ul.navbar-nav
    >li>a
      &.active, &:hover, &:focus
        padding-bottom 10px
        border-bottom 5px solid cyan
unquote("}")